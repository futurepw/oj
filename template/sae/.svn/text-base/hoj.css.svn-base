@import url(../../bootstrap/css/bootstrap.css);
a {
    color: #1A5CC8;
    text-decoration: none;
}
a:hover {
    color: orange;
    text-decoration: underline;
}
h2 {
    color: blue;
}
#wrapper {
    width: 95%;
    position: relative;
    left: 2.5%;
}
input{
   height:24px;
}

.toprow {
    background-color: #fd9704;
    color: #FFFFFF;
    font-weight: bold;
    white-space: nowrap;
    /*background: url("image/menu_bg.png");*/
}
#menu {
    /*background: url("image/menu_bg.png") repeat scroll 0 0 transparent;*/
    background-color: #417dbb;
    font-weight: bold;
    height: 37px;
    position: static;
    text-align: center;
    visibility: visible;
    width: 100%;
    z-index: 2;
}
body {
    background-color: #ffffff;
    color:#336699;
    background-image: url("/image/bg2.png");
   /* background-repeat: no-repeat;*/
}
.oddrow {
    background-color: #cccdc8;
    white-space: nowrap;
}
.evenrow {
    background-color: #ffffff;
    white-space: nowrap;
}
.toprow a {
    color: #FFFFFF;
    font-family: Arial;
    font-size: 18px;
    font-weight: bold;
    margin: 15px;
}
.toprow a:hover {
    color: orange;
    font-family: Arial;
    font-size: 18px;
    font-weight: bold;
    margin: 15px;
}


.hd {
    color: #fd9704;
    font-weight: bold;
}
.time {
    text-align: right;
}
.ip {
    padding-right: 5px;
    text-align: right;
}
tr.userinfo {
    background-color: #FFFFF0;
    font-size: 16px;
}
span.yes {
    color: green;
    font-weight: bolder;
}
span.no {
    color: red;
    font-weight: bolder;
}
.green {
    color: #80a659;
}
.red {
    color: red;
}
.blue {
    color: blue;
}
.gray {
    color: gray;
}
.orange {
    color: orange;
}
.navy {
    color: navy;
}
span.exadmin {
    color: gray;
}
.center,#center {
	width=100%;
    text-align: center;
}
div.content {
    background: none repeat scroll 0 0 #BBD8E9;
    font-family: Times New Roman;
    font-size: 24px;
    line-height: 28px;
    height: auto;
    margin: 0;
    padding: 0 20px;
    text-align: left;
    white-space:normal;
}
.sampledata {
    background: none repeat scroll 0 0 #8DB8FF;
    font-family: Monospace;
    font-size: 18px;
    line-height: 20px;
    white-space: pre;
}
#head {
    height: 53px;
    position: static;
    text-align: center;
    visibility: visible;
    width: 100%;
    z-index: 1;
}

.menu_item {
    display: inline;
    position: relative;
    top: 5px;
    vertical-align: bottom;
}
.menu_item a {
    color: #FFFFFF;
    font-size: 20px;
    top: 2px;
}
.menu_item_selected{
    color:orange;
}

#profile {
    font-weight: bold;
    height: 32px;
    left: 0;
    position: absolute;
    text-align: right;
    top: 0;
    visibility: visible;
    width: 100%;
    z-index: 3;
}
#broadcast {
    color: red;
    height: 50px;
    position: static;
    text-align: center;
    visibility: visible;
    width: 100%;
    z-index: 4;
}
#main {
    height: auto;
    position: static;
    width: 100%; 
    z-index: 6;
}
#foot {
    height: 133px;
    position: static;
    text-align: center;
    visibility: visible;
    width: 100%;
    z-index: 7;
}
#logo {
    position: static;
    vertical-align: middle;
}

